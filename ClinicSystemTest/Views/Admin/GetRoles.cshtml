@model IEnumerable<ClinicSystemTest.Models.ListViewModel>

@{
    ViewData["Title"] = "GetRoles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List of User</h1>
&nbsp;
<table class="table">
    <thead>
        <tr class="table-dark table-active">
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roles)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>@String.Join(" , ", item.Roles.ToList())</td>
                <td><a class="btn btn-dark" asp-action="AssigningRole" asp-controller="Admin" asp-route-userId="@item.Id">Manage Roles</a></td>
            </tr>
        }
    </tbody>
</table>
&nbsp;&nbsp;&nbsp;
<p>
    <a class="btn btn-secondary" asp-action="CreateRole">CreateRole</a>&nbsp;
</p>

<div class="img2">
    <img src="~/images/background3.png" width="250" height="250" />
</div>
